/* profile.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 头像昵称区域 */
.user-header {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  padding: 40rpx 30rpx 60rpx;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar-wrapper {
  padding: 0;
  background: transparent;
  border: none;
  border-radius: 50%;
  overflow: hidden;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
}

.nickname-wrapper {
  margin-bottom: 20rpx;
}

.nickname-input {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
  color: white;
  font-size: 28rpx;
}

.nickname-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.login-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.version-tip {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.user-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 内容区域 */
.content-area {
  flex: 1;
  padding: 30rpx;
}

.section {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  display: flex;
  align-items: center;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.section-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.section-info {
  display: flex;
  align-items: center;
  color: #666;
}

.section-count {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 收藏预览 */
.collection-preview, .history-preview {
  padding: 0 30rpx 20rpx;
}

.collection-item, .history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.collection-item:last-child, .history-item:last-child {
  border-bottom: none;
}

.question-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.question-difficulty {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  color: white;
}

.difficulty-easy {
  background-color: #4CAF50;
}

.difficulty-medium {
  background-color: #FF9800;
}

.difficulty-hard {
  background-color: #F44336;
}

.history-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-time {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.history-result {
  display: flex;
  align-items: center;
}

.result-status {
  font-size: 28rpx;
  color: #4CAF50;
}

.result-status.incorrect {
  color: #F44336;
}

.view-more {
  text-align: center;
  padding: 20rpx;
  color: #4CAF50;
  font-size: 26rpx;
}

.empty-state {
  padding: 60rpx 30rpx;
  text-align: center;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 功能列表 */
.function-list {
  padding: 0 30rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.function-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
